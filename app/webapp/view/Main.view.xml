<mvc:View
	controllerName="com.gavdi.wdi5.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'com/gavdi/wdi5/model/formatter'
	}">

	<Page
		title="{i18n>appTitle}"
		id="page">
		<content>
			<VBox width="100%" height="100%" justifyContent="Center" alignItems="Center">
				<Image src="../misc/logo.png" class="sapUiMediumMargin"/>
				<HBox justifyContent="Center" alignItems="Center" class="sapUiLargeMarginBottom">
					<Text text="Input your name!" class="sapUiTinyMarginEnd"/>
					<Input value="John Joe" width="15rem"/>
				</HBox>
				<Button text="Press me!" press="navToSecond" width="6rem"/>
				<HBox alignItems="End">
					<core:Icon src="sap-icon://shortcut" size="5rem" color="gray"/>
					<Text text="Wonder where this goes..." />
				</HBox>
			</VBox>
			
		</content>
	</Page>

</mvc:View>
